<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.mrboomdev.boomscrollix.ui.page.HomeFragment"
        android:label="@string/page_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_browse"
        android:name="com.mrboomdev.boomscrollix.ui.dashboard.DashboardFragment"
        android:label="@string/page_browse"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.mrboomdev.boomscrollix.ui.notifications.NotificationsFragment"
        android:label="@string/page_settings"
        tools:layout="@layout/fragment_notifications" />
        
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.mrboomdev.boomscrollix.ui.page.ProfileFragment"
        android:label="@string/page_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>